class Solution {
public:
    int minimumDifference(vector<int>& nums, int k) {
        if(nums.size() == 1) return 0;
        std::sort(nums.begin(),nums.end());
        int min_diff = 10e5;
        int n = nums.size();
        for(int i = 0; i < n; i++){
            if(i + k > n) break;
            int diff = nums[i + k - 1] - nums[i];
            if(diff < min_diff)min_diff = diff;
            std::cout<<min_diff;
        }
        return min_diff;
    }
};
